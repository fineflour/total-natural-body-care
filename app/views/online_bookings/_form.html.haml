= simple_form_for online_booking, html: {class: "form-horizontal" }, |
  wrapper: :horizontal_form,                                   |
  wrapper_mappings: {                                          |
  } do |f|                                                     |
  = f.input :fname, label: "* First Name", class: "booking-label"
  = f.input :lname,  label: "* Last Name", class: "booking-label"
  = f.input :email,  label: "* Email", class: "booking-label"
  = f.input :phone,  label: "* Phone", class: "booking-label"
  = f.input :appnt_date,  label: "* Date", class: "booking-label"
  = f.input :appnt_time,  label: "* Time", class: "booking-label"

  .button-padding.pull-right
    = link_to "Back to index", online_bookings_path, class: "btn btn-default"
    = f.submit "Submit", class: "btn btn-info"
