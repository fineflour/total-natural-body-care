.col-md-10.col-xs-12.col-sm-9
  .page-header
    %h1 User Accounts
  .row
    .col-md-12
      .panel.panel-default
        .panel-heading
        .table-responsive
          %table#users.table.table-bordered.table-hover
            %thead
              %tr
                %th Name
                %th Email
                %th Role
            %tbody
              - @users.each do |u|
                %tr{:id => "user-#{u.id}"}
                  %td= link_to u.name, user_path(u)
                  %td= u.email
                  %td= u.role
                  %td
                    = link_to "Edit", edit_user_path(u)
        %span.pull-right
          = will_paginate @users, renderer: BootstrapPagination::Rails
  .row
    .col-md-12
      - if policy(current_user).new?
        = link_to "New User", new_user_path
  %br
  %br
