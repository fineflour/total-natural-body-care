.col-md-10.col-xs-12.col-sm-9
  #user-show
    .page-header
      %h3= @user.name
    .row
      .col-md-6
        %div= render partial: "user_field", locals: { user: @user}
        .button-padding.pull-right
          = link_to "Back to index", users_path, class: "btn btn-default"
          = link_to "Edit", edit_user_path(@user), class: "btn btn-info"
