<!-- Required local params
-->
<!-- @param material [Material] an instance of Material to render the form for.
-->
<%= simple_form_for article,  html: { class: "form-horizontal"},  input_html: { :class => "new-article" } do  |f| %>                               
  <%= f.input :title , placeholder: "Title", label: false %>
  <%= f.input :body, placeholder: "Body", label: false, :rows => 30 %>
  <%= f.input :source, placeholder: "Source", label: false %>
  <%= f.input :active, as: :boolean, checked_value: true, unchecked_value: false %>
  <div class="button-padding pull-right">
    <%= link_to "Back to index", articles_path, class: "btn btn-default" %>
    <%= f.submit "Submit", class: "btn btn-info" %>
  </div>
<% end %>
